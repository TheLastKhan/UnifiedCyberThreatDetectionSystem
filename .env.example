# ========================================
# UNIFIED CYBER THREAT DETECTION SYSTEM
# Environment Configuration
# ========================================
# UYARI: Production'da .env dosyasını git'e commit etmeyin!
# UYARI: Tüm secret değerleri değiştirin!

# ========================================
# Flask Configuration
# ========================================
FLASK_ENV=production
FLASK_APP=app:app
DEBUG=False
SECRET_KEY=change-this-to-a-random-secret-key-min-32-chars

# ========================================
# Server Configuration
# ========================================
HOST=0.0.0.0
PORT=5000
WORKERS=4
WORKER_CLASS=sync
TIMEOUT=120

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://threat_user:threat_password@localhost:5432/threat_detection
DATABASE_POOL_SIZE=20
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=False

# ========================================
# Redis Configuration
# ========================================
REDIS_URL=redis://localhost:6379/0
REDIS_TIMEOUT=10
REDIS_SOCKET_CONNECT_TIMEOUT=10
REDIS_SOCKET_KEEPALIVE=True

# ========================================
# Model Configuration
# ========================================
MODEL_PATH=/app/models
MAX_EMAIL_LENGTH=50000
MAX_LOGS_BATCH=10000
MODEL_CACHE_TTL=3600
FEATURE_CACHE_TTL=1800

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=10
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ========================================
# Security Configuration
# ========================================
CORS_ORIGINS=https://api.unifiedthreat.com,https://dashboard.unifiedthreat.com
CORS_ALLOW_CREDENTIALS=True
API_KEY_REQUIRED=False
API_KEY_SECRET=change-this-to-a-random-api-key
JWT_SECRET_KEY=change-this-to-a-random-jwt-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ========================================
# Email/SMTP Configuration
# ========================================
SMTP_ENABLED=False
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
ALERT_EMAIL=admin@unifiedthreat.com

# ========================================
# Monitoring Configuration
# ========================================
MONITORING_ENABLED=True
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=8000

# Sentry Error Tracking (optional)
SENTRY_ENABLED=False
SENTRY_DSN=https://your-sentry-dsn

# Datadog (optional)
DATADOG_ENABLED=False
DATADOG_API_KEY=your-datadog-key

# ========================================
# Feature Flags
# ========================================
ENABLE_EMAIL_DETECTION=True
ENABLE_WEB_ANALYSIS=True
ENABLE_CORRELATION=True
ENABLE_EXPLAINABILITY=True
ENABLE_BATCH_PROCESSING=True

# ========================================
# Performance Configuration
# ========================================
CACHE_ENABLED=True
BATCH_PROCESSING_SIZE=100
BATCH_PROCESSING_TIMEOUT=300
MAX_WORKERS=4

# ========================================
# File Storage Configuration
# ========================================
UPLOAD_FOLDER=/app/data/uploads
MAX_UPLOAD_SIZE=52428800  # 50MB
ALLOWED_EXTENSIONS=csv,txt,log,json

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# ========================================
# SSL/TLS Configuration
# ========================================
SSL_ENABLED=True
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_VERIFY=True

# ========================================
# Backup Configuration
# ========================================
BACKUP_ENABLED=True
BACKUP_SCHEDULE=daily  # daily, weekly, monthly
BACKUP_PATH=/app/backups
BACKUP_RETENTION_DAYS=30

# ========================================
# Advanced Configuration
# ========================================
# Timezone
TIMEZONE=UTC

# Environment Type
ENVIRONMENT=production  # development, staging, production

# Debug Mode (NEVER enable in production)
DEBUG_MODE=False

# Verbose Logging
VERBOSE_LOGGING=False

# ========================================
# Custom Parameters
# ========================================
# Email Detector Threshold
EMAIL_PHISHING_THRESHOLD=0.7

# Web Analyzer Threshold
WEB_ANOMALY_THRESHOLD=0.6

# Correlation Threshold
CORRELATION_THRESHOLD=0.5

# ========================================
# ÖNEMLİ NOTLAR
# ========================================
# 1. Tüm SECRET ve PASSWORD değerlerini değiştirin!
# 2. Production'da DEBUG=False olduğundan emin olun
# 3. SECURE ve HTTPONLY cookie ayarlarını yapılandırın
# 4. Database şifresini güçlü yapın (minimum 16 karakter)
# 5. SSL sertifikasını geçerli ve güncel tutun
# 6. Regular backup'lar alın
# 7. Environment variablelerini kurcalamayın
