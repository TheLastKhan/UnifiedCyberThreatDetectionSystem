# ============================================
# Production Environment Variables
# Unified Cyber Threat Detection System
# ============================================

# Flask Configuration
FLASK_APP=web_dashboard/app.py
FLASK_ENV=production
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=4
THREADS=2
WORKER_CLASS=sync
TIMEOUT=120
MAX_REQUESTS=1000

# Database Configuration
DATABASE_URL=postgresql://threat_user:threat_password@db:5432/threat_detection
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=threat_user
POSTGRES_PASSWORD=threat_password
POSTGRES_DB=threat_detection
DATABASE_POOL_SIZE=20
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=False

# Redis Configuration
REDIS_URL=redis://cache:6379/0
REDIS_HOST=cache
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Model Configuration
MODEL_PATH=models/
STACKING_MODEL=email_detector_stacking.pkl
VOTING_MODEL=email_detector_voting.pkl
TFIDF_MODEL=tfidf_vectorizer.pkl
WEB_MODEL=web_anomaly_detector.pkl
MODEL_RELOAD_INTERVAL=3600

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_RATE_LIMIT=100/hour
API_TIMEOUT=30

# Security
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CORS_ORIGINS=https://your-domain.com
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# VirusTotal API (optional)
VT_API_KEY=your-virustotal-api-key
VT_RATE_LIMIT=4

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
ACCESS_LOG=-
ERROR_LOG=-

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Email Alerts (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_RECIPIENTS=admin@your-domain.com

# Slack Alerts (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Feature Flags
ENABLE_EMAIL_DETECTOR=True
ENABLE_WEB_ANALYZER=True
ENABLE_UNIFIED_ANALYSIS=True
ENABLE_BATCH_PROCESSING=True
ENABLE_REPORTS=True

# Performance
CACHE_TTL=300
MAX_BATCH_SIZE=100
REQUEST_TIMEOUT=30

# Development (set to False in production)
TESTING=False
DEVELOPMENT=False
