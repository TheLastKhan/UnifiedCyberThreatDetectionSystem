[flake8]
# Line length
max-line-length = 100

# Ignored error codes
ignore = 
    E501,  # Line too long (handled by Black)
    W503,  # Line break before binary operator
    E203,  # Whitespace before ':'

# Excluded files/directories
exclude = 
    __pycache__,
    .git,
    .venv,
    venv,
    .pytest_cache,
    .eggs,
    *.egg

# Per-file-ignores
per-file-ignores =
    __init__.py: F401  # Imported but unused
    tests/*: F401,F841  # Unused imports and variables in tests
